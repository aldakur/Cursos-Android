<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="service.webservice.facilito.codigo.com.ejemplocfwebservices.MainActivity">

    <ProgressBar
        android:id="@+id/progressbar_activity_data_in_list_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/button_cargardatos_activity_data_in_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar datos en ListView"/>

    <ListView
        android:id="@+id/listview_activity_data_in_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>